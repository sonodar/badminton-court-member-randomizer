{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@api": ["src/api"],
      "@logic": ["src/logic"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"]
}
