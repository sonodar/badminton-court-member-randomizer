{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"nursery": {
				"noUnusedImports": "error"
			}
		}
	},
	"files": {
		"include": ["src"],
		"ignore": ["*.js", "src/api/API.ts", "src/api/models", "src/api/graphql"]
	}
}
